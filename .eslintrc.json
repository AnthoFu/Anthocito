{
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "no-console": "off",
        "no-restricted-syntax": "off",
        "import/no-dynamic-require": "off",
        "global-require": "off",
        "max-len": "off"
    }
}
